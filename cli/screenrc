# general stuff
shelltitle '# |'
defscrollback 4096
msgwait 1
nonblock on

# change the hardstatus settings to give an window list
#backtick 1 0 0 /home/linolium/.bw.pl
hardstatus alwayslastline
hardstatus string '%{= kK}%-Lw%{= KW}%50>  %n%f %t %{= kK}%+Lw%< %{=kG}%-= %1`%D, %M %d, %C %A'

# unicode support
defutf8 on
