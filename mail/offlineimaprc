[general]
accounts = jkweb1,jkweb2
maxsyncaccounts = 3
socktimeout = 30

ui = blinkenlights
# machineui, blinkenlights, quiet, ttyui, basic

[Account jkweb1]
localrepository = local
remoterepository = remote1

[Account jkweb2]
localrepository = local
remoterepository = remote2

[Repository local]
type = Maildir 
localfolders = ~/.maildir

[Repository remote1]
type = IMAP
ssl = no
remotehost = jkweb.ca
remoteport = 143
remoteusereval = linolium
preauthtunnel = ssh -q jkweb.ca /usr/libexec/dovecot/imap
maxconnections = 5
holdconnectionopen = no
folderfilter = lambda foldername: \
  foldername in ['INBOX', 'INBOX.Facebook', 'Sent']

[Repository remote2]
type = IMAP
ssl = no
remotehost = jkweb.ca
remoteport = 143
remoteusereval = linolium
preauthtunnel = ssh -q jkweb.ca dovecot --exec-mail imap
maxconnections = 5
holdconnectionopen = no
folderfilter = lambda foldername: \
  foldername not in ['INBOX', 'INBOX.Facebook', 'Sent']
