# Commands to control ginko music
"<%= hostname != 'ginko' ? 'ssh ginko ' : '' %>mpc toggle"
  XF86AudioPlay
"<%= hostname != 'ginko' ? 'ssh ginko ' : '' %>mpc stop"
  XF86AudioStop
"<%= hostname != 'ginko' ? 'ssh ginko ' : '' %>mpc prev"
  XF86AudioPrev
"<%= hostname != 'ginko' ? 'ssh ginko ' : '' %>mpc next"
  XF86AudioNext
"<%= hostname != 'ginko' ? 'ssh ginko ' : '' %>bin/pa_vol_down 5"
  XF86ApplicationLeft
"<%= hostname != 'ginko' ? 'ssh ginko ' : '' %>bin/pa_vol_up 5"
  XF86ApplicationRight

# Commands to control jimmy music
"<%= hostname != 'jimmy' ? 'ssh jimmy ' : '' %> mpc toggle"
  Control + XF86AudioPlay
"<%= hostname != 'jimmy' ? 'ssh jimmy ' : '' %>mpc stop"
  Control + XF86AudioStop
"<%= hostname != 'jimmy' ? 'ssh jimmy ' : '' %>mpc prev"
  Control + XF86AudioPrev
"<%= hostname != 'jimmy' ? 'ssh jimmy ' : '' %>mpc next"
  Control + XF86AudioNext

# Logitech keyboard
