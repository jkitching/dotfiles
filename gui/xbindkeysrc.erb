# Commands to control local music
"mpc toggle"
  XF86AudioPlay
"mpc stop"
  XF86AudioStop
"mpc prev"
  XF86AudioPrev
"mpc next"
  XF86AudioNext
"bin/pa_vol_down 5"
  XF86ApplicationLeft
"bin/pa_vol_up 5"
  XF86ApplicationRight

# Commands to control <%=
other_host = (hostname == 'ginko') ? 'jimmy' : 'ginko' # default to ginko
%> music
"ssh <%= other_host %> mpc toggle"
  Control + XF86AudioPlay
"ssh <%= other_host %> mpc stop"
  Control + XF86AudioStop
"ssh <%= other_host %> mpc prev"
  Control + XF86AudioPrev
"ssh <%= other_host %> mpc next"
  Control + XF86AudioNext
"ssh <%= other_host %> bin/pa_vol_down 5"
  Control + XF86ApplicationLeft
"ssh <%= other_host %> bin/pa_vol_up 5"
  Control + XF86ApplicationRight

